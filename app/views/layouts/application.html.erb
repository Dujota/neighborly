<!DOCTYPE html>
<html>
  <head>
    <title>Neighbourly</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% # Animate CSS CDN %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">

    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_pack_tag "application" %>
    <%= javascript_packs_with_chunks_tag "navbar", "topbar" %>

  </head>

  <body>
    <%= render "layouts/flash" %>

    <div class="header">
      <h1>Welcome to Neighbourly</h1>

      <ul class="menu">
        <%= render "devise/menu/login_logout" %>
        <%= render "devise/menu/signup_edit" %>
      </ul>
    </div>

    <div class="layout-container">
      <nav id="nav-bar"></nav>

      <section class="main-content">
        <div id="top-bar"></div>

        <%= yield %>
      </section>
    </div>
  </body>
</html>
